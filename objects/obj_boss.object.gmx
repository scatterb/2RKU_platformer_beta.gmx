            <string>/// State machine and collisions


if (global.pause) &amp;&amp; instance_exists(obj_player) exit;


//The idle and chase states
if instance_exists(obj_player)
switch (state)
{
    case e_state.idle:
    {
        sprite_index = spr_boss_idle;
        hsp = 0;
        vsp = (min(7, vsp+0.05)); // Gravity stuff
        if (distance_to_object(obj_player) &lt; 96) state = e_state.chase;
    }
    break;
    case e_state.chase:
    {
        sprite_index = spr_boss_walk;
        dir = sign(obj_player.x - x); // X-coordinate of our player, substract the x-coordinate of this enemy. It will be negative if the player on the left, and positive if right.
        hsp = dir * 1.5;
        vsp = (min(7, vsp+0.05));
        if (distance_to_object(obj_player) &gt; 128) state = e_state.idle; 
        else if (distance_to_object(obj_player) &lt; 64) &amp;&amp; (global.boulder = false) state = e_state.attack;    
    } 
    break;
    case e_state.attack:
    {
        dir = sign(obj_player.x - x); // X-coordinate of our player, substract the x-coordinate of this enemy. It will be negative if the player on the left, and positive if right.
        hsp = dir * 1.5;
        vsp = (min(7, vsp+0.05));
        if (distance_to_object(obj_player) &lt; 96) state = e_state.chase;
        if (distance_to_object(obj_player) &gt; 128) state = e_state.idle; 
        sprite_index = spr_boss_attack;
        image_speed = 0.05;
        // Drops a boulder if there is not one already
        if (!global.boulder)
        {
            instance_create(x, y, obj_boulder);
            global.boulder = true;
        }
    }
}


// Modify variables
hsp = dir * movespeed;
vsp += grav;


//Horizontal Collision
if (place_meeting(x+hsp,y,obj_wall))
{
    while(!place_meeting(x+sign(hsp),y,obj_wall))
    {
        x += sign(hsp);
    }
    hsp = 0;
    dir *= -1;
}
x += hsp;

//Vertical Collision
if (place_meeting(x,y+vsp,obj_wall))
{
    while(!place_meeting(x,y+sign(vsp),obj_wall))
    {
        y += sign(vsp);
    }
    vsp = 0;
    if (fearofheights) &amp;&amp; !position_meeting(x+(sprite_width/2)*dir, y+(sprite_height/2)+8, obj_wall)
    {
        dir *= -1;
    }
}
y += vsp;

