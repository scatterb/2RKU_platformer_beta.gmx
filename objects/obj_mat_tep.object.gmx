            <kind>1</kind>
            <string>/// State machines and collisions


// Needed for the pause instance
if (global.pause) exit;


//The idle and chase states
if instance_exists(obj_player)
{ 
    switch (state)
    {
        case e_state.idle:
        {
            if (distance_to_object(obj_player) &lt; 96) state = e_state.chase;
        }
        break;
        case e_state.chase:
        {
            sprite_index = spr_mat_tep_walk
            dir = sign(obj_player.x-x); // X-coordinate of our player, substract the x-coordinate of this enemy. It will be negative if the player on the left, and positive if right.
            if (dir &lt; 0) image_xscale = -1;
            hsp = dir * 1.5;
            if (place_meeting(x,y+vsp,obj_player)) state = e_state.talk;
        }
        break;
        case e_state.talk:
        {
            // Creates a text if one does not already exist
            if !instance_exists(obj_text)
            {
                sprite_index = spr_mat_tep;
                dir = 0;
                hsp = 0;
                with(obj_player)
                {
                    scr_text("Kuule poika tuola joku kloppi soittaa paskaa.# Viittitkö hoidella asian niin, että me päästäis lavalle?", 0.6, view_wview/2, 175);
                }
            }
            if (distance_to_object(obj_player) &gt; 54) with (obj_text) instance_destroy();
        }
    }
}


//Horizontal Collision
if (place_meeting(x+hsp,y,obj_wall))
{
    while(!place_meeting(x+sign(hsp),y,obj_wall))
    {
        x += sign(hsp);
    }
    hsp = 0;
    dir *= -1;
}
x += hsp;


//Vertical Collision
if (place_meeting(x,y+vsp,obj_wall))
{
    while(!place_meeting(x,y+sign(vsp),obj_wall))
    {
        y += sign(vsp);
    }
    vsp = 0;
    if (fearofheights) &amp;&amp; !position_meeting(x+(sprite_width/2)*dir, y+(sprite_height/2)+8, obj_wall)
    {
        dir *= -1;
    }
}
y += vsp;
</string>
